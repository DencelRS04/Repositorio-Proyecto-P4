<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.8" />
		<httpRuntime targetFramework="4.8" />
	</system.web>

	<system.serviceModel>

		<!-- 🔹 Definición del servicio -->
		<services>
			<service name="WebServiceAlmacen.AlmacenService">
				<!-- Endpoint principal SOAP -->
				<endpoint
				  address=""
				  binding="basicHttpBinding"
				  contract="WebServiceAlmacen.IAlmacen" />

				<!-- Endpoint de metadatos (para probar en el navegador o agregar referencia en VS) -->
				<endpoint
				  address="mex"
				  binding="mexHttpBinding"
				  contract="IMetadataExchange" />

				<!-- Dirección base del servicio -->
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080/WebServiceAlmacen/" />
					</baseAddresses>
				</host>
			</service>
		</services>

		<!-- 🔹 Configuración de comportamiento (metadatos y errores) -->
		<behaviors>
			<serviceBehaviors>
				<behavior name="">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<!-- 🔹 Permitir bindings HTTPS si se habilita SSL -->
		<protocolMapping>
			<add binding="basicHttpsBinding" scheme="https" />
		</protocolMapping>

		<serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />

	</system.serviceModel>

	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true" />
		<directoryBrowse enabled="true" />
	</system.webServer>

</configuration>
